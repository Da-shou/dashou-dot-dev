<%- include('../header') -%>

<h1><%= post.title %></h1>

<div class="post-header-detail">
        <div class="post-category"><%= post.category %></div>
        <div class="post-tags">
                <% tags.forEach(function(tag) { %>
                <div class="post-tag"><%= tag.name %></div>
                <% }) %>
        </div>
</div>
<div class="post-date"><%= post.timestamp %></div>

<div id="post-content">
        <%- post.content %>
</div>

<%- include('../footer') -%>

